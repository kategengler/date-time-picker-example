{{#power-datepicker
  selected=this.value
  center=this.value
  onSelect=(action this.updateValueFromInput value="date")
as |dp|}}
  {{#dp.trigger onKeyDown=(action this.doNotCloseOnEnter)}}
    <input type="text"
           class="{{inputClass}}"
           onchange={{action this.updateValueFromInput value="target.value"}}
           value={{if this.value (moment-format this.value this.dateFormat)}}>
  {{/dp.trigger}}

  {{#dp.content class="date-picker-calendar"}}
    {{dp.nav}}
    {{dp.days}}
  {{/dp.content}}
{{/power-datepicker}}
